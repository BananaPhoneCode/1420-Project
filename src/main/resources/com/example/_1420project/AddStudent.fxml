<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example._1420project.AddStudentController" prefWidth="400" prefHeight="500">
    <children>
        <VBox spacing="10.0" layoutX="20" layoutY="20">
            <Label text="Add Student" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <TextField fx:id="nameField" promptText="Name" />
            <TextField fx:id="idField" promptText="Student ID" />
            <TextField fx:id="addressField" promptText="Address" />
            <TextField fx:id="telephoneField" promptText="Telephone" />
            <TextField fx:id="emailField" promptText="Email" />
            <ComboBox fx:id="levelComboBox" promptText="Select Level" />
            <TextField fx:id="semesterField" promptText="Semester" />
            <TextField fx:id="subjectsField" promptText="Subjects/Courses" />
            <TextField fx:id="thesisField" promptText="Thesis Title (for Graduate only)" disable="true" />
            <TextField fx:id="progressField" promptText="Progress (%)" />
            <TextField fx:id="passwordField" promptText="Password" />

            <Button text="Add Student" onAction="#handleAddStudent" />
            <Label fx:id="statusLabel" textFill="green" />
        </VBox>
    </children>
</AnchorPane>