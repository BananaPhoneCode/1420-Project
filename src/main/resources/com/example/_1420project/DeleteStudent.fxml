<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example._1420project.DeleteStudentController"
            prefWidth="350" prefHeight="200">
    <children>
        <VBox spacing="10.0" layoutX="20.0" layoutY="20.0">
            <Label text="Delete Student" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <TextField fx:id="studentIdField" promptText="Enter Student ID"/>
            <Button text="Delete" onAction="#handleDeleteStudent"/>
            <Label fx:id="statusLabel" textFill="red"/>
        </VBox>
    </children>
</AnchorPane>
