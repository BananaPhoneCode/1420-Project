<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example._1420project.EditStudentProfileController" prefWidth="400" prefHeight="300">
    <children>
        <VBox spacing="10.0" alignment="CENTER" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <children>
                <Label text="Edit Profile" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <HBox spacing="10">
                    <Label text="Address:" minWidth="100"/>
                    <TextField fx:id="addressField" promptText="Enter new address" />
                </HBox>

                <HBox spacing="10">
                    <Label text="Telephone:" minWidth="100"/>
                    <TextField fx:id="telephoneField" promptText="Enter new telephone" />
                </HBox>

                <Button text="Save Changes" onAction="#handleSave" />
                <Label fx:id="statusLabel" textFill="green"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
